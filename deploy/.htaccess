# Apache configuration for Khan Academy Tracker React SPA
# Place this file in: /home/dh_k773dx/matthew.makealltheprojects.com/.htaccess
#
# This configuration:
# 1. Enables mod_rewrite for URL routing
# 2. Routes all requests through index.html (SPA fallback)
# 3. Caches static assets for performance
# 4. Allows direct access to real files and directories

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Allow direct access to existing files
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Route all other requests to index.html for React Router
  # This allows client-side routing to work properly
  RewriteRule ^ index.html [L]
</IfModule>

# Enable aggressive caching for static assets
# This improves performance by telling browsers to cache files
<IfModule mod_expires.c>
  ExpiresActive On
  
  # HTML files: Don't cache (always check for new version)
  ExpiresByType text/html "access plus 0 seconds"
  
  # JavaScript and CSS: Cache for 1 year
  # (They have unique names in Vite builds, so this is safe)
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType text/css "access plus 1 year"
  
  # Images: Cache for 1 year
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  
  # Fonts: Cache for 1 year
  ExpiresByType font/ttf "access plus 1 year"
  ExpiresByType font/otf "access plus 1 year"
  ExpiresByType application/font-woff "access plus 1 year"
  ExpiresByType application/font-woff2 "access plus 1 year"
</IfModule>

# Compression for faster transfers (optional but recommended)
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/css text/javascript application/javascript text/xml
</IfModule>

# Security headers (optional but recommended)
<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set X-XSS-Protection "1; mode=block"
</IfModule>

